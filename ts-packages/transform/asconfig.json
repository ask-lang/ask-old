{
    "targets": {
        "debug": {
            "binaryFile": "build/untouched.wasm",
            "textFile": "build/untouched.wat",
            "sourceMap": true,
            "debug": true
        },
        "release": {
            "binaryFile": "build/optimized.wasm",
            "textFile": "build/optimized.wat",
            "sourceMap": true,
            "optimizeLevel": 3,
            "shrinkLevel": 1,
            "converge": false,
            "noAssert": false
        }
    },
    "options": {
        "transform": ["ask-transform"],
        "importMemory": true,
        "initialMemory": 2,
        "maximumMemory": 16,
        "noExportMemory": true,
        "runtime": "stub",
        "use": "abort="
    }
}